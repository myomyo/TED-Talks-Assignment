<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_talks_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/ted_talk2"
        android:layout_marginLeft="@dimen/margin_card_medium"
        android:layout_marginRight="@dimen/margin_card_medium"
        android:layout_marginTop="@dimen/margin_card_medium"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_speaker_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:text="Susan Emmett"
        android:layout_marginTop="@dimen/margin_top_large"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/text_regular_2x"/>

    <ImageView
        android:id="@+id/iv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_top_large"
        android:layout_toRightOf="@id/tv_speaker_name"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/tv_talk_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_speaker_name"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:text="This simple test can help kids hear better"
        android:textColor="@color/secondaryTextColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_navigation"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_talk_title"
        android:paddingTop="30dp"
        android:text="5:24"
        android:textAlignment="viewEnd"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/text_regular_2x" />

</RelativeLayout>